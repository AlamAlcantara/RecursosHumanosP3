@model Recursos_Humanos_P3.cargo
@{
    Layout = null;
    string error = ViewData["error"].ToString();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Formulario Cargo</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>


    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
    <link rel="icon" href="~/imagenes/icono_logo_rrhh.png">

    <style>

        body {
            background-image: url("/imagenes/Hydrogen.jpg");
        }
    </style>
</head>
<body>

    @Html.Partial("NavBar")

    @if (error.Contains("true"))
    {
        <div id="btn_mensaje" style=" margin: auto; margin-top: 10px; width: 50%;">
            <div class="alert alert-danger collapse show d-flex justify-content-end">
                <h5 class="mr-auto">Error al registrar cargo</h5>
                <button class="btn btn-outline-danger btn-sm" data-toggle="collapse" data-target="#btn_mensaje">X</button>
            </div>
        </div>

        if (ViewData["registro_existente"] != null)
        {
            <div style="width:100%;">
                <h5 style="color:red; margin-left: 25%;" class="container">@ViewData["registro_existente"]</h5>
            </div>
        }
    }
    else if (error.Contains("false"))
    {
        <div id="btn_mensaje" style=" margin: auto; margin-top: 10px; width: 50%;">
            <div class="alert alert-success collapse show d-flex justify-content-end">
                <h5 class="mr-auto">Cargo registrado correctamente</h5>
                <button class="btn btn-outline-success btn-sm" data-toggle="collapse" data-target="#btn_mensaje">X</button>
            </div>
        </div>
    }

    <form class="form-group shadow-lg" style="width: 50%; margin: auto; margin-top: 20px; border-radius: 15px; padding: 20px; background-color: white;" action="/Mantenimiento/Registrar_Cargo" method="post">

        <h3>Formulario Cargo</h3>

        <h5>Nombre Cargo</h5>
        @Html.TextBoxFor(m => m.cargo1, new { @class = "form-control", placeholder = "Nombre" })
        @Html.ValidationMessageFor(m => m.cargo1, "", new { style = "color:red" })
        <br />
        <button class="btn btn-outline-success mt-2" type="submit">Registrar</button>

    </form>
    <br><br>

</body>
</html>
