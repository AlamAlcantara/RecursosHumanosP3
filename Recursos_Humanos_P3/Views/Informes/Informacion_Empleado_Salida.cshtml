@model Recursos_Humanos_P3.empleado
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Informacion Empleado</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</head>
<body>

    @Html.Partial("NavBar")
    <div>
        <div class="shadow-lg mt-4" style="background-color: white; border-radius: 5px; padding: 20px;  width: 50%; margin: auto;">
            <h2 class="mb-3">Información del Empleado</h2>
            <div class="row">
                <div class="col-md-6">
                    <h4>Id: <span>@Html.DisplayTextFor(e=>e.id)</span></h4>

                </div>

                <div class="col-md-6">
                    <h4>Código: <span>@Html.DisplayTextFor(e => e.Codigo_Empleado)</span></h4>

                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <h5>Nombre: <span class="ml-2">@Html.DisplayTextFor(e => e.Nombre)</span></h5>
                </div>

                <div class="col-md-6">
                    <h5>Apellido: <span class="ml-2">@Html.DisplayTextFor(e => e.Apellido)</span></h5>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <h5>Id Departamento: <span class="ml-2">@Html.DisplayTextFor(e => e.id_departamento)</span></h5>
                </div>

                <div class="col-md-6">
                    <h5>Id Cargo: <span class="ml-2">@Html.DisplayTextFor(e => e.id_cargo)</span></h5>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <h5>Fecha de ingreso: <span class="ml-2">@ViewData["fecha_entrada"].ToString()</span></h5>
                </div>

                <div class="col-md-6">
                    <h5>Salario: <span class="ml-2">RD$ @Html.DisplayTextFor(e => e.salario)</span></h5>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <h5>Estatus: <span class="ml-2">@Html.DisplayTextFor(e => e.estatus)</span></h5>
                </div>

                <div class="col-md-6">
                    <h5>Teléfono: <span class="ml-2">@Html.DisplayTextFor(e => e.telefono)</span></h5>
                </div>
            </div>

            <div class="row">
                <div class="col-md-5">
                    <h5>Fecha Salida: <span class="ml-2">@ViewData["fecha_salida"].ToString()</span></h5>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a href="/Informes/Lista_Salida_Empleados" class="btn btn-primary btn-lg" style=" margin-left: 45%;">Volver a la lista</a>
    </div>


</body>
</html>
