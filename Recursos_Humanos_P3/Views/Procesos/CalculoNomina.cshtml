@model Recursos_Humanos_P3.nomina
    @{
        Layout = null;

        string error = ViewData["error"].ToString();
    }

    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Nomina</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>


        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
        <link href="https://fonts.googleapis.com/css?family=Roboto+Slab:700" rel="stylesheet">
        <link rel="icon" href="~/imagenes/icono_logo_rrhh.png">

        <style>

        body { background-image: url("/imagenes/Hydrogen.jpg"); }
        </style>


    </head>
    <body>

        @Html.Partial("NavBar");

        @if (error != null)
        {
            if (error.Contains("true"))
            {
                <div id="btn_mensaje" style=" margin: auto; margin-top: 10px; width: 50%;">
                    <div class="alert alert-danger collapse show d-flex justify-content-end">
                        <h5 class="mr-auto">Error al registrar nómina</h5>
                        <button class="btn btn-outline-danger btn-sm" data-toggle="collapse" data-target="#btn_mensaje">X</button>
                    </div>
                </div>


            }
            else if (error.Contains("false"))
            {

                <div id="btn_mensaje" style=" margin: auto; margin-top: 10px; width: 50%;">
                    <div class="alert alert-success collapse show d-flex justify-content-end">
                        <h5 class="mr-auto">Nómina Registrada</h5>
                        <button class="btn btn-outline-success btn-sm" data-toggle="collapse" data-target="#btn_mensaje">X</button>
                    </div>
                </div>
            }
        }

        <div class="container">
            <form action="/Procesos/Registrar_Nomina" method="post" style="background-color: white; border-radius: 5px; padding: 20px; width: 100%;" class="form-group shadow-lg mt-3">
                <h2 class="mb-3">Formulario de Nómina</h2>
                <div class="row">
                    <div class="col-md-6">
                        <h4>Total</h4>
                        <h4>RD$ @Html.DisplayTextFor(n => n.total)</h4>
                    </div>

                    <div class="col-md-6">
                        <h4>Fecha</h4>
                        @Html.TextBoxFor(n => n.fecha, new { @class = "form-control", type = "date" })
                        @Html.ValidationMessageFor(n => n.fecha, "", new { style = "color:red;" })
                        @*<input type="date" class="form-control">*@
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <h4>Empleados Activos Calculados<span class="badge badge-success ml-2">@ViewData["cant_empleados"]</span></h4>

                    </div>

                    <div class=" col-md-6 d-flex justify-content-end">
                        <button type="submit" class="btn btn-outline-success btn-lg mt-4 ml-auto">Registrar Nómina</button>
                    </div>
                </div>


            </form>
        </div>


    </body>
</html>
